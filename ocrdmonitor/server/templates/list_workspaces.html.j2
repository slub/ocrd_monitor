{% extends 'base.html.j2' %}

{% block headline %}
  {% block title %}Workspaces{% endblock %}
{% endblock %}
{% block content %}
    {% for workspace in workspaces %}
    <div class="box">
        <div class="columns">
            <div class="column is-four-fifths">
            <h2 class="subtitle" style="line-height: 2" >{{ workspace }}</h2>
            </div>
            <div class="column">
            <div class="buttons is-right">
                <a href="{{ url_for('workspaces.open', workspace=workspace)}}" class="button">Open</a>
            </div>
            </div>
        </div>
    </div>
    {% endfor %}    
</body>
{% endblock %}
